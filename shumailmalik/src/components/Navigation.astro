---
const navItems = [
  { href: "/projects", label: "Projects" },
  { href: "/blog", label: "Blog" }
];
---

<header class="border-b-2 border-[#1a1a1a] bg-[#e6e6e6] p-2">
  <div class="flex items-center">
    <a href="/" class="p-2">
      <div class="w-8 h-8 bg-[#1a1a1a] rounded"></div>
    </a>
    <nav class="flex gap-4 px-4">
      {navItems.map(item => (
        <a 
          href={item.href}
          class="text-[#1a1a1a] hover:underline"
        >
          {item.label}
        </a>
      ))}
    </nav>
  </div>
</header>