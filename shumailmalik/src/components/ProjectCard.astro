---
interface Props {
  title: string;
  description: string;
  image: string;
  date: string;
  href: string;
}

const { title, description, image, date, href } = Astro.props;
---

<article class="border-2 border-[#1a1a1a]">
  <div class="border-b-2 border-[#1a1a1a] p-1 bg-[#d4d4d4] flex items-center gap-2">
    <div class="w-2 h-2 rounded-full bg-[#1a1a1a]"></div>
    <div class="w-2 h-2 rounded-full bg-[#1a1a1a]"></div>
    <span class="text-sm font-mono">{date}</span>
  </div>
  <div class="aspect-video border-b-2 border-[#1a1a1a]">
    <img src={image} alt={title} class="w-full h-full object-cover" />
  </div>
  <div class="p-6">
    <h3 class="text-xl font-bold mb-4">{title}</h3>
    <p class="mb-6 text-gray-700">{description}</p>
    <a 
      href={href}
      class="inline-block px-4 py-2 border-2 border-[#1a1a1a] hover:bg-[#d4d4d4] transition-colors"
    >
      View project
    </a>
  </div>
</article>