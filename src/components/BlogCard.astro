---
interface Props {
  date: string;
  image: string;
  href: string;
}

const { date, image, href } = Astro.props;
---

<div class="block border-b-2 border-[#1a1a1a]">
  <div class="border-b-2 border-[#1a1a1a] p-1 bg-[#d4d4d4] flex items-center gap-2">
    <div class="w-2 h-2 rounded-full bg-[#1a1a1a]"></div>
    <div class="w-2 h-2 rounded-full bg-[#1a1a1a]"></div>
    <span class="text-sm font-mono">{date}</span>
  </div>
  <div class="aspect-video">
    <img src={image} alt="Blog post image" class="w-full h-full object-cover" />
  </div>
</div>